#include <stdio.h>

#define SQUARE(x) ((x)*(x))

int main() {
    int number;
    printf("Enter the number\n");
    scanf("%d",&number);
    printf("add value is %d \n", SQUARE(number++));
    return 0;
}
/**********************************
Test Case 1:
	Enter the number 4
	add value is 20 
	
Test Case 1:
	Enter the number 10
	add value is 110

**********************************/
